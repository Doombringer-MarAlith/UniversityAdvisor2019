@model IEnumerable<Models.Programme>

@{
    ViewBag.Title = "Programme";
}

<h2>Programmes of @ViewBag.FacultyName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
    }
</table>

<p>
    @Html.ActionLink("Back To Faculty Details", "Details", "Faculties", new { id = ViewBag.FacultyId }, null)
</p>

@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Administrator"))
    {
<p>
    @Html.ActionLink("Add", "Add", new { facultyId = ViewBag.FacultyId })
</p>
    }
}
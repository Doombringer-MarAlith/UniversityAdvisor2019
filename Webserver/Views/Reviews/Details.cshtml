@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Administrator"))
    {
        <p>
            @Html.ActionLink("Delete", "Delete", "Reviews", new { id = Model.Id }, null)
        </p>
        <p>
            @Html.ActionLink("Edit", "Edit", "Reviews", new { id = Model.Id }, null)
        </p>
    }
}

@if (Model.UniversityId != 0)
{
    <p>
        @Html.ActionLink("Back to List", "University", new { id = Model.UniversityId }, null)
    </p>
}
else if (Model.FacultyId != 0)
{
    <p>
        @Html.ActionLink("Back to List", "Faculty", new { id = Model.FacultyId }, null)

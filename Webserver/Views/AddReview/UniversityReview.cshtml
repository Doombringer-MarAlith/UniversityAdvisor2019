@model Models.Review

@{
    ViewBag.Title = "UniversityReview";
}

<h2>UniversityReview</h2>



@using (Html.BeginForm("ReviewUniversity", "AddReview", new { id = ViewBag.universityId }, FormMethod.Post, null))
{
    <center>
        @Html.TextAreaFor(model => model.Text, new { name = "text", cols = "40", rows = "10" })
        @Html.ValidationMessageFor(model => model.Text)
        <br>
        <input type="submit" class="btn btn-default" value="Submit" />
    </center>
}
@model Models.Review

@{
    ViewBag.Title = "ProgrammeReview";
}

    <h2>Programme Review</h2>



@using (Html.BeginForm("ReviewProgramme", "AddReview", new { id = ViewBag.programmeId }, FormMethod.Post, null))
{
    <center>
        @Html.TextAreaFor(model => model.Text, new { name = "text", cols = "40", rows = "10" })
        @Html.ValidationMessageFor(model => model.Text)
        @Html.TextBoxFor(model => model.Value, new { name = "Rating(1-5)" })
        <br>
        <input type="submit" class="btn btn-default" value="Submit" />
    </center>
}


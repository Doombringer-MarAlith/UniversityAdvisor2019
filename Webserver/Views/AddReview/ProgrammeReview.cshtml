@model Models.Review

@{
    ViewBag.Title = "ProgrammeReview";
}

<h2>Programme Review</h2>

@using (Html.BeginForm("ReviewProgramme", "AddReview", new { id = ViewBag.programmeId }, FormMethod.Post, null))
{
    <center>
        @Html.TextAreaFor(model => model.Text, new { name = "text", cols = "40", rows = "10", placeholder = "Tell us abobut your experience!", id = "emojiArea" })
        @Html.ValidationMessageFor(model => model.Text)
        <div>
            @Html.RadioButtonFor(model => model.Value, 1, new { @class = "rate", id = "star1", type = "radio", name = "rating", title = "Terrible", label = "1" })
            @Html.RadioButtonFor(model => model.Value, 2, new { @class = "rate", id = "star2", type = "radio", name = "rating", title = "Not good", label = "2" })
            @Html.RadioButtonFor(model => model.Value, 3, new { @class = "rate", id = "star3", type = "radio", name = "rating", title = "Average", label = "3" })
            @Html.RadioButtonFor(model => model.Value, 4, new { @class = "rate", id = "star4", type = "radio", name = "rating", title = "Good", label = "4" })
            @Html.RadioButtonFor(model => model.Value, 5, new { @class = "rate", id = "star5", type = "radio", name = "rating", title = "Amazing", label = "5" })
        </div>
        <br>
        <input type="submit" class="btn btn-default" value="Submit" />
    </center>
}

<script src="https://cdn.jsdelivr.net/npm/emoji-button@latest/dist/index.min.js"></script>
<script src="~/Scripts/emojiButton.js"></script>